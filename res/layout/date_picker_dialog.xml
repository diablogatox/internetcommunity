<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false" >
    
    <LinearLayout 
        android:id="@+id/ll_date_pick"  
	    android:layout_width="match_parent"  
	    android:layout_height="wrap_content"  
	    android:orientation="vertical"  
	    android:layout_alignParentBottom="true"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00baff"
            >
            <TextView 
                android:id="@+id/tv_date_pick_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView 
                android:id="@+id/tv_date_pick_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#efefef" >
           <!-- android:calendarViewShown="false"false是将右边的日历隐藏，true是显示日历
                android:spinnersShown="true" false是只显示日历，日期隐藏，true是只显示日期，日历隐藏-->
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:calendarViewShown="false"
                android:spinnersShown="true" />
        </RelativeLayout>
        
        
    </LinearLayout>    
   
</RelativeLayout>
