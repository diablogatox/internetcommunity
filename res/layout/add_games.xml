<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#00baff"
        >
        <ImageView
            android:id="@+id/iv_add_games_back" 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_back"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:text="添加游戏"
            android:layout_centerInParent="true"
            />
        <!--
        <TextView 
            android:id="@+id/tv_add_games_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center_vertical"
            android:text="保存"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_add_game_pen2"
            />
        -->
    </RelativeLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已添加游戏"
        android:textSize="15sp"
        android:textColor="#666666"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    
    <GridView 
	    android:id="@+id/gv_add_games"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:numColumns="3"
	    android:scrollbars="none"
	    android:verticalSpacing="12dp"
	    android:horizontalSpacing="5dp"
	    android:layout_marginBottom="32dp"
	    ></GridView>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <ImageView 
            android:id="@+id/iv_icon_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_pen"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <EditText 
            android:id="@+id/et_input_games"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/iv_icon_pen"
            android:layout_toLeftOf="@+id/btn_add_games_sure"
            android:background="@null"
            android:hint="手动输入游戏"
            android:textColorHint="#55000000"
            android:layout_alignParentBottom="true"
            />
        <Button 
            android:id="@+id/btn_add_games_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_addgame_pen1"
            android:text="确定"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="点击添加游戏"
	        android:textColor="#555555"
	        android:textSize="18sp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        />
        <GridView 
            android:id="@+id/gv_add_games1"
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp"
		    android:numColumns="3"
		    android:scrollbars="none"
		    android:verticalSpacing="12dp"
		    android:horizontalSpacing="5dp"
		    android:layout_marginBottom="22dp"
            ></GridView>
    </LinearLayout>

</LinearLayout>
