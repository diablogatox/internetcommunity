<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout 
	    android:id="@+id/rl_personal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#00baff"
        >
        <ImageView
            android:id="@+id/personal_back" 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/icon_back"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:text="我的"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ScrollView 
        android:id="@+id/sv_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@+id/rl_personal1"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout 
		        android:id="@+id/rl_personal2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#efefef"
		        >
		        <ImageView 
		            android:id="@+id/iv_personal_pic"
		            android:layout_width="90dp"
		            android:layout_height="90dp"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="15dp"
		            android:layout_marginBottom="15dp"
		            android:layout_marginRight="10dp"
		            android:layout_centerVertical="true"
		            />
		        <RelativeLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="85dp"
		            android:layout_toLeftOf="@+id/ib_icon_signature"
		            android:layout_toRightOf="@+id/iv_personal_pic"
		            android:layout_centerVertical="true"
		            android:background="#ffffff"
		            >
		            <TextView 
		                android:id="@+id/tv_personal_signature"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_marginLeft="5dp"
		                android:layout_marginTop="5dp"
		                android:layout_centerInParent="true"
		                android:textSize="18sp"
		                />
		        </RelativeLayout>
		        <ImageButton 
		            android:id="@+id/ib_icon_signature"
		            android:layout_width="wrap_content"
		            android:layout_height="85dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="6dp"
		            android:background="@drawable/icon_signature"
		            />
		    </RelativeLayout>
		    <View 
		        android:id="@+id/view_personal1"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#cccccc"
		        />
		    <RelativeLayout 
		        android:id="@+id/rl_personal3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="12dp"
		            android:layout_marginTop="11dp"
		            android:layout_marginBottom="11dp"
		            android:layout_centerVertical="true"
		            android:text="昵称"
		            android:textSize="20sp"
		            android:textColor="#999999"
		            />
		        <ImageButton 
		            android:id="@+id/ib_personal_arrow1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/arrow"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="5dp"
		            android:layout_marginLeft="5dp"
		            android:layout_centerVertical="true"
		            />
		        <TextView
		            android:id="@+id/tv_personal_nickname" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:textColor="#000000"
		            android:textSize="21sp"
		            android:layout_toLeftOf="@+id/ib_personal_arrow1"
		            />
		    </RelativeLayout>
		    <View 
		        android:id="@+id/view_personal2"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#cccccc"
		        />
		    <RelativeLayout 
		        android:id="@+id/rl_personal4"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="12dp"
		            android:layout_marginTop="11dp"
		            android:layout_marginBottom="11dp"
		            android:layout_centerVertical="true"
		            android:text="性别"
		            android:textSize="20sp"
		            android:textColor="#999999"
		            />
		        <ImageButton 
		            android:id="@+id/ib_personal_arrow2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/arrow"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="5dp"
		            android:layout_marginLeft="5dp"
		            />
		        <TextView
		            android:id="@+id/tv_personal_sex" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:textSize="21sp"
		            android:textColor="#000000"
		            android:layout_toLeftOf="@+id/ib_personal_arrow2"
		            />
		    </RelativeLayout>
		    <View 
		        android:id="@+id/view_personal3"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#cccccc"
		        />
		    <RelativeLayout 
		        android:id="@+id/rl_personal5"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="12dp"
		            android:layout_marginTop="11dp"
		            android:layout_marginBottom="11dp"
		            android:layout_centerVertical="true"
		            android:text="生日"
		            android:textSize="20sp"
		            android:textColor="#999999"
		            />
		        <ImageButton 
		            android:id="@+id/ib_personal_arrow3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/arrow"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="5dp"
		            android:layout_marginLeft="5dp"
		            />
		        <TextView 
		            android:id="@+id/tv_personal_age"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:textSize="21sp"
		            android:textColor="#000000"
		            android:layout_toLeftOf="@+id/ib_personal_arrow3"
		            />
		    </RelativeLayout>
		    <View 
		        android:id="@+id/view_personal4"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#cccccc"
		        />
		    <RelativeLayout 
		        android:id="@+id/rl_personal6"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="12dp"
		            android:layout_marginTop="11dp"
		            android:layout_marginBottom="11dp"
		            android:layout_centerVertical="true"
		            android:text="ID"
		            android:textSize="20sp"
		            android:textColor="#999999"
		            />
		        <ImageButton 
		            android:id="@+id/ib_personal_arrow4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/arrow_blank"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="5dp"
		            android:layout_marginLeft="5dp"
		            />
		        <TextView
		            android:id="@+id/tv_personal_id" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:textSize="21sp"
		            android:textColor="#000000"
		            android:layout_toLeftOf="@+id/ib_personal_arrow4"
		            />
		    </RelativeLayout>
		    <View 
		        android:id="@+id/view_personal5"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#cccccc"
		        />
		    <View 
		        android:id="@+id/view_personal6"
		        android:layout_width="match_parent"
		        android:layout_height="5dp"
		        android:background="#efefef"
		        />
		    <TextView 
		        android:id="@+id/tv_personal_my_game"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="我的游戏"
		        android:layout_marginLeft="13dp"
		        android:layout_marginTop="8dp"
		        android:layout_marginBottom="5dp"
		        android:textSize="21sp"
		        />
		    <com.orfid.test.MyGridView 
		        android:id="@+id/gv_personal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="8dp"
		        android:numColumns="3"
		        android:verticalSpacing="10dp"
		        android:layout_marginBottom="10dp"
		        ></com.orfid.test.MyGridView>
		    <View 
		        android:id="@+id/view_personal7"
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:background="#cccccc"
		        />
		    <View 
		        android:id="@+id/view_personal8"
		        android:layout_width="match_parent"
		        android:layout_height="5dp"
		        android:background="#efefef"
		        />
		    <RelativeLayout
        android:id="@+id/rl_personal7" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:descendantFocusability="blocksDescendants"
            >
            <ImageButton 
                android:id="@+id/ib_add_game_yuan2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginTop="20dp"
	            android:layout_marginBottom="20dp"
	            android:focusableInTouchMode="true"
	            android:background="@drawable/button_add_game_yuan2"
	            />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ib_add_game_yuan2"
                android:layout_marginLeft="5dp"
                android:text="添加游戏"
                android:textSize="20sp"
                android:textColor="#999999"
                />
        </RelativeLayout>
    </RelativeLayout>
        </LinearLayout>
        
    </ScrollView>
    
</RelativeLayout>
