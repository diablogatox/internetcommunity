<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#00baff"
        >
        <ImageView
            android:id="@+id/iv_nickname_back" 
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_back"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:text="昵称"
            android:layout_centerInParent="true"
            />
        <TextView 
            android:id="@+id/tv_nickname_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center_vertical"
            android:text="保存"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_add_game_pen2"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        >
        <EditText 
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="22sp"
            android:hint="编辑个人昵称"
            android:singleLine="true"
            android:maxLength="15"
            android:textColorHint="#55000000"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />
        <ImageView 
            android:id="@+id/iv_nickname_reset"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/voice_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

</LinearLayout>
